<Page x:Class="TrafficModeling.View.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:vms="clr-namespace:TrafficModeling.View">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding ToggleSeries0Command}" Margin="15">Toggle first</Button>
                <Button Command="{Binding ToggleSeries1Command}" Margin="15">Toggle second</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="Dynamics of cars in queues"
                           FontSize="20"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <lvc:CartesianChart
            Name="Charts"
            Grid.Row="1"
            Series="{Binding SeriesCollection}"
            XAxes="{Binding XAxes}"
            YAxes="{Binding YAxes}"
            TooltipPosition="Top"
            ZoomMode="X"
            />

    </Grid>
</Page>
