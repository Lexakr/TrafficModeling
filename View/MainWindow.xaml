<Window x:Class="TrafficModeling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficModeling"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Name="Tab_Model">
            <TabItem Header="Model Parameters">
                <Grid Background="#FFE5E5E5">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                        <StackPanel Orientation="Vertical"
                                    Margin="0,0,40,0">
                            <StackPanel Orientation="Vertical">
                                <Label Content="Speed Distribution Parameters:"
                                       Margin="5,5,5,5"/>
                                <StackPanel Orientation="Horizontal"
                                    Margin="5,5,5,5">
                                    <Label Content="Civil cars Speed:"/>
                                    <TextBox x:Name="CivCarSpeed"
                                             Text=""
                                             Width="40"/>
                                    <Label Content="Dispersion:"/>
                                    <TextBox x:Name="CivCarStdDev"
                                             Text=""
                                             Width="40"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="5,5,5,5">
                                    <Label Content="Civil cars Speed:"/>
                                    <TextBox x:Name="GovCarSpeed"
                                             Text=""
                                             Width="40"/>
                                    <Label Content="Dispersion:"/>
                                    <TextBox x:Name="GovCarStdDev"
                                             Text=""
                                             Width="40"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <Label Content="Cars Generator Parameters:"
                                       Margin="5,5,5,5"/>
                                <StackPanel Orientation="Horizontal"
                                    Margin="5,5,5,5">
                                    <Label Content="Road 1 average car arrival time:"
                                       Width="175"/>
                                    <TextBox x:Name="InputStream1ExpValue"
                                     Text=""
                                     Width="40"
                                     />
                                    <Label Content="Dispersion:"/>
                                    <TextBox x:Name="InputStream1StdDev"
                                     Text=""
                                     Width="40"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                    Margin="5,5,5,5">
                                    <Label Content="Road 2 average car arrival time:"
                                       Width="175"/>
                                    <TextBox x:Name="InputStream2ExpValue"
                                     Text=""
                                     Width="40"
                                     />
                                    <Label Content="Dispersion:"/>
                                    <TextBox x:Name="InputStream2StdDev"
                                     Text=""
                                     Width="40"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="5,5,5,5">
                                    <Label Content="Traffic Light green light time"/>
                                    <TextBox x:Name="TrafficLightTime"
                                             Width="40"/>
                                    <Label Content="red light time:"/>
                                    <TextBox x:Name="TrafficLightDelay"
                                             Width="40"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="5,5,5,5">
                                    <Label Content="Simulation Time (in hours):"/>
                                    <TextBox x:Name="SimulationTime"
                                             Width="40"/>
                                    <Label Content="road length:"/>
                                    <TextBox x:Name="Length"
                                             Width="40"/>
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Старт"
                                        Margin="24,0,0,32"
                                        Height="40"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Left"
                                        Width="75"
                                        Click="ButtonStart_Click"/>
                                <Button Content="Сброс"
                                        Margin="117,0,0,32"
                                        HorizontalAlignment="Left"
                                        Width="75" Height="40"
                                        VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </StackPanel>
                        <Image
                           Source="/road.jpeg"
                           Width="320" Height="320"/>
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="Statistics">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,58">
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
